#!/bin/bash

export GITHUB="$(cygpath $GITHUB)"
export INPUTRC="$DOTFILES/bash/inputrc"
export USERPROFILE="$(cygpath $USERPROFILE)"

# Colors

# Reset
Color_Off='\e[0m'       # Text Reset
Nocolor='\e[0m'         # Text Reset

# Regular Colors
Black='\e[0;30m'        # Black
Red='\e[0;31m'          # Red
Green='\e[0;32m'        # Green
Yellow='\e[0;33m'       # Yellow
Blue='\e[0;34m'         # Blue
Purple='\e[0;35m'       # Purple
Cyan='\e[0;36m'         # Cyan
White='\e[0;37m'        # White

# Bold
BBlack='\e[1;30m'       # Black
BRed='\e[1;31m'         # Red
BGreen='\e[1;32m'       # Green
BYellow='\e[1;33m'      # Yellow
BBlue='\e[1;34m'        # Blue
BPurple='\e[1;35m'      # Purple
BCyan='\e[1;36m'        # Cyan
BWhite='\e[1;37m'       # White

# Underline
UBlack='\e[4;30m'       # Black
URed='\e[4;31m'         # Red
UGreen='\e[4;32m'       # Green
UYellow='\e[4;33m'      # Yellow
UBlue='\e[4;34m'        # Blue
UPurple='\e[4;35m'      # Purple
UCyan='\e[4;36m'        # Cyan
UWhite='\e[4;37m'       # White

# Background
On_Black='\e[40m'       # Black
On_Red='\e[41m'         # Red
On_Green='\e[42m'       # Green
On_Yellow='\e[43m'      # Yellow
On_Blue='\e[44m'        # Blue
On_Purple='\e[45m'      # Purple
On_Cyan='\e[46m'        # Cyan
On_White='\e[47m'       # White

# High Intensity
IBlack='\e[0;90m'       # Black
IRed='\e[0;91m'         # Red
IGreen='\e[0;92m'       # Green
IYellow='\e[0;93m'      # Yellow
IBlue='\e[0;94m'        # Blue
IPurple='\e[0;95m'      # Purple
ICyan='\e[0;96m'        # Cyan
IWhite='\e[0;97m'       # White

# Bold High Intensity
BIBlack='\e[1;90m'      # Black
BIRed='\e[1;91m'        # Red
BIGreen='\e[1;92m'      # Green
BIYellow='\e[1;93m'     # Yellow
BIBlue='\e[1;94m'       # Blue
BIPurple='\e[1;95m'     # Purple
BICyan='\e[1;96m'       # Cyan
BIWhite='\e[1;97m'      # White

# High Intensity backgrounds
On_IBlack='\e[0;100m'   # Black
On_IRed='\e[0;101m'     # Red
On_IGreen='\e[0;102m'   # Green
On_IYellow='\e[0;103m'  # Yellow
On_IBlue='\e[0;104m'    # Blue
On_IPurple='\e[0;105m'  # Purple
On_ICyan='\e[0;106m'    # Cyan

# These No Space (NS) colors include surrounding \[ and \] escape sequences
# This is useful when dealing with $PS1

# Reset
NS_Color_Off='\[\e[0m\]'       # Text Reset
NS_Nocolor='\[\e[0m\]'         # Text Reset

# Regular Colors
NS_Black='\[\e[0;30m\]'        # Black
NS_Red='\[\e[0;31m\]'          # Red
NS_Green='\[\e[0;32m\]'        # Green
NS_Yellow='\[\e[0;33m\]'       # Yellow
NS_Blue='\[\e[0;34m\]'         # Blue
NS_Purple='\[\e[0;35m\]'       # Purple
NS_Cyan='\[\e[0;36m\]'         # Cyan
NS_White='\[\e[0;37m\]'        # White

# Bold
NS_BBlack='\[\e[1;30m\]'       # Black
NS_BRed='\[\e[1;31m\]'         # Red
NS_BGreen='\[\e[1;32m\]'       # Green
NS_BYellow='\[\e[1;33m\]'      # Yellow
NS_BBlue='\[\e[1;34m\]'        # Blue
NS_BPurple='\[\e[1;35m\]'      # Purple
NS_BCyan='\[\e[1;36m\]'        # Cyan
NS_BWhite='\[\e[1;37m\]'       # White

# Underline
NS_UBlack='\[\e[4;30m\]'       # Black
NS_URed='\[\e[4;31m\]'         # Red
NS_UGreen='\[\e[4;32m\]'       # Green
NS_UYellow='\[\e[4;33m\]'      # Yellow
NS_UBlue='\[\e[4;34m\]'        # Blue
NS_UPurple='\[\e[4;35m\]'      # Purple
NS_UCyan='\[\e[4;36m\]'        # Cyan
NS_UWhite='\[\e[4;37m\]'       # White

# Background
NS_On_Black='\[\e[40m\]'       # Black
NS_On_Red='\[\e[41m\]'         # Red
NS_On_Green='\[\e[42m\]'       # Green
NS_On_Yellow='\[\e[43m\]'      # Yellow
NS_On_Blue='\[\e[44m\]'        # Blue
NS_On_Purple='\[\e[45m\]'      # Purple
NS_On_Cyan='\[\e[46m\]'        # Cyan
NS_On_White='\[\e[47m\]'       # White

# High Intensity
NS_IBlack='\[\e[0;90m\]'       # Black
NS_IRed='\[\e[0;91m\]'         # Red
NS_IGreen='\[\e[0;92m\]'       # Green
NS_IYellow='\[\e[0;93m\]'      # Yellow
NS_IBlue='\[\e[0;94m\]'        # Blue
NS_IPurple='\[\e[0;95m\]'      # Purple
NS_ICyan='\[\e[0;96m\]'        # Cyan
NS_IWhite='\[\e[0;97m\]'       # White

# Bold High Intensity
NS_BIBlack='\[\e[1;90m\]'      # Black
NS_BIRed='\[\e[1;91m\]'        # Red
NS_BIGreen='\[\e[1;92m\]'      # Green
NS_BIYellow='\[\e[1;93m\]'     # Yellow
NS_BIBlue='\[\e[1;94m\]'       # Blue
NS_BIPurple='\[\e[1;95m\]'     # Purple
NS_BICyan='\[\e[1;96m\]'       # Cyan
NS_BIWhite='\[\e[1;97m\]'      # White

# High Intensity backgrounds
NS_On_IBlack='\[\e[0;100m\]'   # Black
NS_On_IRed='\[\e[0;101m\]'     # Red
NS_On_IGreen='\[\e[0;102m\]'   # Green
NS_On_IYellow='\[\e[0;103m\]'  # Yellow
NS_On_IBlue='\[\e[0;104m\]'    # Blue
NS_On_IPurple='\[\e[0;105m\]'  # Purple
NS_On_ICyan='\[\e[0;106m\]'    # Cyan
